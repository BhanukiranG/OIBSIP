<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_view_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="100dp"
            android:text="Signup"
            android:textColor="@color/black"
            android:textSize="50dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_text_1"
            android:layout_width="330dp"
            android:layout_height="77dp"
            android:layout_below="@+id/text_view_1"
            android:layout_alignStart="@+id/button_1"
            android:layout_marginStart="-83dp"
            android:layout_marginTop="42dp"
            android:drawableLeft="@drawable/val"
            android:hint="Email" />

        <EditText
            android:id="@+id/edit_text_2"
            android:layout_width="331dp"
            android:layout_height="70dp"
            android:layout_below="@+id/edit_text_1"
            android:layout_alignStart="@+id/button_1"
            android:layout_marginStart="-83dp"
            android:layout_marginTop="38dp"
            android:drawableLeft="@drawable/key"
            android:hint="Password" />

        <EditText
            android:id="@+id/edit_text_3"
            android:layout_width="333dp"
            android:layout_height="67dp"
            android:layout_below="@+id/edit_text_2"
            android:layout_marginStart="32dp"
            android:layout_marginTop="38dp"
            android:layout_toEndOf="@+id/textView"
            android:drawableLeft="@drawable/key"
            android:hint="Confirm Password" />

        <Button
            android:id="@+id/button_1"
            android:layout_width="181dp"
            android:layout_height="75dp"
            android:layout_below="@+id/edit_text_3"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="50dp"
            android:onClick="openlogin"
            android:text="Signup"
            android:textColorHighlight="#009688" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>